@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 form-signin">
            <h3 class="text-center login-title" style="margin-bottom: 20px;">Пожалуйста авторизуйтесь</h3>
            <form data-ng-controller="AuthorizationController" data-ng-submit="loginClick()">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Логин" data-ng-model="loginModel.Login">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Пароль" data-ng-model="loginModel.Password">
                </div>
                <input class="btn btn-primary btn-block" type="submit" value="Войти">
            </form>
        </div>
    </div>
</div>
